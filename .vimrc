execute pathogen#infect()
syntax on
filetype plugin indent on

set background=dark

se ru
set nu
set so=5

set splitbelow
set splitright

set expandtab
set tabstop=4
set shiftwidth=4
set smartindent

set wildignore+=*/.git/*,*/node_modules/*,*.pyc

highlight clear SignColumn
highlight SignColumn ctermbg=black
